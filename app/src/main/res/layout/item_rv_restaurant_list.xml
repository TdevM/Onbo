<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_restaurant_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_4_dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_restaurant_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/restaurant_image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/restaurant" />


            <RelativeLayout
                android:id="@+id/rl_res_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_restaurant_image">


                <LinearLayout
                    android:id="@+id/ll_res_nam_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_8_dp"
                        android:layout_marginEnd="@dimen/size_8_dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="TdevM's Palace"
                        android:textColor="@color/heading_color"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_restaurant_rating_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/size_8_dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="4.2"
                        android:textColor="@color/heading_color"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="0dp"
                        android:baselineAlignBottom="false"
                        android:keepScreenOn="false"
                        app:srcCompat="@drawable/ic_star" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_restaurant_cuisine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_locality_new"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Italian"
                    android:textColor="@color/sub_heading_color_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_restaurant_locality_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_res_nam_set"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Hudson Lane, GTB Nagar"
                    android:textColor="@color/sub_heading_color_light"
                    android:textSize="12sp" />


            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_alignBottom="@+id/iv_restaurant_image"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/size_8_dp"
                android:layout_marginTop="@dimen/size_8_dp"
                android:layout_toEndOf="@+id/iv_restaurant_image"
                android:background="@color/separator_line" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8_dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_8_dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/image_design_random"
                    app:srcCompat="@drawable/res_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_self_ordering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_toEndOf="@+id/imageView14"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Self Order "
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_8_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/rupee_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_cost_for_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_toEndOf="@+id/imageView16"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="600 for two"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_8_dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/image_design_random"
                    app:srcCompat="@drawable/qr_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_qr_enabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_toEndOf="@+id/imageView17"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="QR Enabled"
                    android:textSize="12sp" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>