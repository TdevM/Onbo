<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_restaurant_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_restaurant_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/restaurant_image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/restaurant" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_4_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TdevM's Palace"
                    android:textColor="@color/heading_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_restaurant_cuisine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_locality"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Italian"
                    android:textColor="@color/sub_heading_color_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_restaurant_locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_restaurant_name"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Hudson Lane, GTB Nagar"
                    android:textColor="@color/sub_heading_color_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_restaurant_rating_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_restaurant_name"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/size_8_dp"
                    android:layout_toStartOf="@+id/imageView15"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="4.2"
                    android:textColor="@color/heading_color"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_restaurant_name"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_star" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_restaurant_cuisine"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:background="@color/LightGrey" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_height_12"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_8_dp"
                    app:srcCompat="@drawable/res_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_self_ordering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_2_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Self Order "
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="@dimen/size_4_dp"
                    android:layout_marginTop="0dp"
                    android:paddingTop="2dp"
                    app:srcCompat="@drawable/rupee_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_cost_for_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_2_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="600 for two"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/size_4_dp"
                    app:srcCompat="@drawable/qr_strokexxhdpi" />

                <TextView
                    android:id="@+id/tv_qr_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_2_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="QR Enabled"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>