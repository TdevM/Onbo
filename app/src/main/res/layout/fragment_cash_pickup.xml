<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.payment.fragments.CashPickupFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_layout_edit_account_details"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_16_dp"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16_dp"
                    android:text="Order payment"
                    android:textColor="@color/primary_dark_app"
                    android:textSize="24sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:layout_marginEnd="@dimen/size_16_dp"
                    android:text="Waiter will be collecting cash shortly."
                    android:textColor="@color/sub_heading_color" />

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_animate_final_cash_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/default_space_48"
                    android:contentDescription="@string/image_design_random"
                    app:srcCompat="@drawable/ic_accept_cash_t1_2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView25" />
                <!--app:srcCompat="@drawable/animation_payment_screen" />-->




            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cash_pickup_order_amount"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_16_dp"
                android:text="@string/please_keep_cash_ready"
                android:textAlignment="center"
                android:textColor="@color/heading_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_cash_pickup_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/size_16_dp"
                android:layout_marginTop="@dimen/default_space_32"
                android:layout_marginEnd="@dimen/size_16_dp"
                android:layout_toEndOf="@id/textView26"
                android:text="225"
                android:textColor="@color/heading_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_check_payment_status_t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="@drawable/gradient_6"
                android:text="@string/check_payment_status"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_payment_status_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView28"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_space_32"
                android:text="@string/payment_pending"
                android:textColor="#ED2939"
                android:textSize="18sp"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pb_t1_check_payment_status"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="170dp"
                android:layout_marginBottom="0dp"
                android:visibility="invisible" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>