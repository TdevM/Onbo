<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8_dp">

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_8_dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/rupee_fillxxhdpi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_8_dp"
                                android:text="400 For two"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_8_dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/qr_fillxxhdpi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_8_dp"
                                android:text="QR Enabled"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/res_fillxxhdpi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_8_dp"
                                android:text="Dine in"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_16_dp">

                        <TextView
                            android:id="@+id/tv_restaurant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/size_8_dp"
                            android:layout_marginTop="@dimen/size_4_dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="TdevM's Palace"
                            android:textColor="@color/heading_color"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_restaurant_cuisine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_restaurant_locality"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/size_8_dp"
                            android:layout_marginTop="@dimen/size_8_dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Italian"
                            android:textColor="@color/sub_heading_color_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_restaurant_locality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_restaurant_name"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/size_8_dp"
                            android:layout_marginTop="@dimen/size_8_dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Hudson Lane, GTB Nagar"
                            android:textColor="@color/sub_heading_color_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_restaurant_rating_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv_restaurant_name"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="@dimen/size_8_dp"
                            android:layout_toStartOf="@+id/imageView15"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="4.2"
                            android:textColor="@color/heading_color"
                            android:textSize="16sp" />


                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignBottom="@+id/tv_restaurant_name"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_star" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/tv_restaurant_cuisine"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/size_8_dp"
                            android:layout_marginTop="@dimen/size_8_dp"
                            android:background="@color/LightGrey"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16_dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_8_dp"
                        android:layout_weight="1"
                        android:text="Book" />

                    <Button
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_8_dp"
                        android:layout_weight="1"
                        android:text="Call" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_restaurant_menu"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>