<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/android_custom_gridview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_si_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_veg_non_veg_grid"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Tiramisu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_si_dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_si_dish_name"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="250dp"
                android:layout_marginBottom="32dp"
                android:maxLines="1"
                android:text="220"
                android:textSize="13sp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_veg_non_veg_grid"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/veg_non_veg"
                android:scaleType="fitXY"
                android:src="@drawable/veg_symbol" />

            <TextView
                android:id="@+id/tv_menu_item_item_detail"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/default_space_32"
                android:layout_marginBottom="8dp"
                android:text="Item detail " />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>