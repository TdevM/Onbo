<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/android_custom_gridview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_si_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/iv_veg_non_veg_grid"
                android:layout_marginLeft="47dp"
                android:layout_marginStart="47dp"
                android:text="Tiramisu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_si_dish_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tv_si_dish_name"
                android:text="220"
                android:textSize="13sp"
                android:layout_alignLeft="@+id/tv_si_dish_name" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_veg_non_veg_grid"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:contentDescription="@string/veg_non_veg"
                android:scaleType="fitXY"
                android:src="@drawable/veg_symbol" />

            <tdevm.app_ui.widgets.IncDecButton
                android:id="@+id/btn_id_item_dish_grid"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                app:backGroundColor="@android:color/holo_blue_dark"
                app:textSize="7sp">

            </tdevm.app_ui.widgets.IncDecButton>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>