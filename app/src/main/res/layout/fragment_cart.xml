<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="tdevm.app_ui.modules.dinein.fragments.CartFragment">

    <!-- TODO: Update blank fragmlayout_inc_decyout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_cart"
        android:layout_weight="4"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:padding="@dimen/recycler_view_item_width"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:text="@string/total_items" />

            <TextView
                android:id="@+id/tv_total_quantities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:text="@string/_0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_total_quantities"
                android:layout_alignBottom="@+id/tv_total_quantities"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:layout_toLeftOf="@+id/tv_total_bill_amount"
                android:layout_toStartOf="@+id/tv_total_bill_amount"
                android:text="@string/to_pay" />

            <TextView
                android:id="@+id/tv_total_bill_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="@string/_0" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_order_initiate"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/proceed" />
</LinearLayout>
