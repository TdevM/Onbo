<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tdevm.app_ui.modules.auth.AuthenticationActivity">

    <TextView
        android:id="@+id/text_login_home"
        android:layout_width="wrap_content"
        android:text="@string/lets_get_started"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_init_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp" />


    <tdevm.app_ui.widgets.PhoneEditText
        android:id="@+id/et_init_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textSize="20sp"
        android:inputType="phone"
        android:tag="+91"
        android:layout_above="@+id/btn_login_next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:id="@+id/btn_login_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:text="@string/auth_next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignTop="@+id/text_login_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />


</RelativeLayout>
