<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_my_order_single"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_my_orders_restaurant_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_my_orders_order_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TdevM's Palace" />

        <TextView
            android:id="@+id/tv_my_orders_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="21 Sept, 9:30 PM" />

        <TextView
            android:id="@+id/tv_my_orders_restaurant_locality_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_orders_restaurant_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Rohini, New Delhi" />

        <TextView
            android:id="@+id/tv_my_orders_order_total"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="$ 2440" />

        <TextView
            android:id="@+id/tv_orders_slug"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_my_orders_order_total"
            android:layout_below="@+id/tv_my_orders_restaurant_locality_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:maxLines="1"
            android:text="Item 1, Item 2, Item 3..." />

    </RelativeLayout>

</android.support.v7.widget.CardView>

