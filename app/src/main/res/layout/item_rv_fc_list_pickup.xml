<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_fc_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_4_dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_restaurant_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/restaurant_image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/restaurant" />


            <RelativeLayout
                android:id="@+id/rl_res_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_restaurant_image">


                <LinearLayout
                    android:id="@+id/ll_res_nam_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_8_dp"
                        android:layout_marginEnd="@dimen/size_8_dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="TdevM's Palace"
                        android:textColor="@color/heading_color"
                        android:textSize="16sp" />




                </LinearLayout>


                <TextView
                    android:id="@+id/tv_restaurant_locality_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_res_nam_set"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size_8_dp"
                    android:layout_marginTop="@dimen/size_8_dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Hudson Lane, GTB Nagar"
                    android:textColor="@color/sub_heading_color_light"
                    android:textSize="12sp" />


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>