<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tdevm.app_ui.modules.dinein.fragments.InitializeOrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_temp_order_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient_6"
        android:text="@string/place_order"
        android:textAllCaps="false"
        android:textColor="@color/AntiqueWhite" />


    <RelativeLayout
        android:id="@+id/relative_layout_initialize_t_order_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_height_112"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_kitchen_message" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/size_16_dp"
            android:layout_below="@id/imageView18"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_temp_order_user_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/any_message_you_want_to_send_to_chef" />

        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout_show_guest_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_initialize_t_order_1"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/layout_guest_count_picker"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="98dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_minus_guest_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/minus"
                android:textColor="@color/primary_dark_app"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_guest_count"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/default_counter_text"
                android:textAlignment="center"
                android:textColor="@color/primary_dark_app"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_plus_guest_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/plus"
                android:textColor="@color/primary_dark_app"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_guest_count_picker"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/default_space_32"
            android:text="@string/how_many_of_you_are_here_today"
            android:textColor="@color/heading_color" />

    </RelativeLayout>



    <ProgressBar
        android:id="@+id/progress_bar_place_t_order"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />



    <ImageView
        android:id="@+id/iv_back_btn_guest_picker"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/size_16_dp"
        android:layout_marginTop="@dimen/size_16_dp"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/default_space_48"
        android:layout_marginEnd="@dimen/size_16_dp"
        android:text="@string/you_re_almost_done"
        android:textColor="@color/primary_dark_app"
        android:textSize="24sp" />

</RelativeLayout>
