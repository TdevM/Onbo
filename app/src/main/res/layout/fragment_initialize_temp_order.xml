<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="tdevm.app_ui.modules.dinein.fragments.InitializeOrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btn_temp_order_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient_6"
        android:text="Place Order"
        android:textAllCaps="false"
        android:textColor="@color/AntiqueWhite" />

    <EditText
        android:id="@+id/et_temp_order_user_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_temp_order_init"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="185dp"
        android:hint="@string/any_message_you_want_to_send_to_chef" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/ic_kitchen_message" />

    <android.widget.Toolbar
        android:id="@+id/toolbar_guest_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ProgressBar
        android:id="@+id/progress_bar_place_t_order"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/layout_guest_count_picker"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="98dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_minus_guest_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/primary_dark_app"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_guest_count"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_plus_guest_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textColor="@color/primary_dark_app"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="193dp"
        android:text="@string/how_many_of_you_are_here_today" />

</RelativeLayout>
