<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.intro.SplashActivity">


    <ImageView
        android:id="@+id/logo_main_bolt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_design_random"
        android:src="@drawable/bolt_man_1xxhdpi" />

    <ImageView
        android:layout_below="@id/logo_main_bolt"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wordmdpi"
        android:contentDescription="@string/image_design_random"
        android:layout_marginTop="@dimen/default_space_32"
        android:id="@+id/app_name_onbo"
        android:layout_width="200dp"
        android:layout_height="150dp" />

</RelativeLayout>